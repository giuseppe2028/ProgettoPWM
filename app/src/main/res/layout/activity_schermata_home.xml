<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:backgroundTint="@color/Red"
    tools:context=".SchermataHome.SchermataHome">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.fragment.app.FragmentContainerView
            android:id="@+id/fragmentContainerHome"
            android:name="com.example.progettopwm.SchermataHome.FragmentPagine.FragmentSchermataHome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            tools:layout="@layout/fragment_schermata_home" />
        <androidx.fragment.app.FragmentContainerView
            android:id="@+id/fragmentContainerAccount"
            android:name="com.example.progettopwm.SchermataHome.FragmentPagine.FragmentSchermataAccount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            tools:layout="@layout/fragment_schermata_account" />

        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/bottomNavigationView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:backgroundTint="@color/white"
            app:menu="@menu/menu" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>